    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Discord Bot",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/main.py",
            "console": "integratedTerminal",
            "env": {
                "development": "true",
                "PYTHONPATH": "${PYTHONPATH}:${workspaceRoot}"
            },
            "justMyCode": false
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "development": "true",
                "PYTHONPATH": "${PYTHONPATH}:${workspaceRoot}"
            },
            "justMyCode": false
        }
    ]
}